<div id="add_item">
  <% remote_form_for :bill_part, @bill_part, :url => { :controller => "data", :action => "save_bill_part" }, :html=>{:id=>"add_bill_part_form"} do |p| %>
    <table>
      <tr>
        <td id="last">
        </td>
        <td id="right">
          Nazwa:
        </td>
        <td>
          <%= p.text_field :name %>
        </td>
        <td id="right">
          Kategoria:
        </td>
        <td>
            <%= select("bill_part", "category_id", Category.find(:all, :conditions=>["user_id=?",session[:user_id]]).collect {|pl| [ pl.name, pl.id ] }, { :include_blank => true }) %>
        </td>
        <td id="right">
        </td>
      </tr>
      <tr>
        <td id="last">
        </td>
        <td id="right">
          Cena:
        </td>
        <td>
          <%= p.text_field :price %>
        </td>
        <td id="right">
          Ilość:
        </td>
        <td>
          <%= p.text_field :count %>
        </td>
        <td id="right">
          <%= p.hidden_field :bill_id %>
          <%= submit_tag("Zapisz") %>
        </td>
      </tr>
    </table>
  <%end %>
</div>
