<div id="bill_graph_form">
  <%# form_remote_tag :url => '/posts' do -%>
  <% form_remote_tag :url => {:controler=>'view', :action=>'bill_graph_details'}, :loading=>"Element.show('load-indicator')", :loaded=>"Element.hide('load-indicator')" do -%>
    <table>
      <tr>
        <td>
          Data:
        </td> 
        <td>
          Od:
        </td> 
        <td colspan="3">
          <%= date_select :bill_graph, :date_from, :use_month_numbers => true %>
        </td> 
        <td>
          Do:
        </td> 
        <td colspan="3">
          <%= date_select :bill_graph, :date_to, :use_month_numbers => true %>
        </td> 
        <td>
          &nbsp;&nbsp;&nbsp;
        </td>
        <td>
          Kwota:
        </td> 
        <td>
          Od:
        </td> 
        <td id="right">
          <%= text_field :bill_graph, 'price_from][calosc', :size=>5, :value=>'00' %>
        </td> 
        <td id="right">
          ,
        </td> 
        <td id="right">
          <%= text_field :bill_graph, 'price_from][grosze', :size=>2, :value=>'00' %>
        </td> 
        <td>
          Do:
        </td> 
        <td id="right">
          <%= text_field :bill_graph, 'price_to][calosc', :size=>5, :value=>'00' %>
        </td> 
        <td id="right">
          ,
        </td> 
        <td id="right">
          <%= text_field :bill_graph, 'price_to][grosze', :size=>2, :value=>'00' %>
        </td> 
      </tr>
      <tr>
        <td colspan="19" id="right">
          <%= submit_tag 'Pokaż' %>
        </td> 
      </tr>
    </table>
  <% end -%>
                      
</div>
<div id="bill_graph_data">
  <h2>Wypełnij formularz aby zobaczyć statystyki.</h2>
</div>
